<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgroundnew"
    android:layout_height="match_parent"
    tools:context="sehgal.attendancemodule.DisplayAttendanceDiary">

    <Button
        android:id="@+id/viewdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/greentoolbar"
        android:textColor="@color/white"
        android:text="VIEW DETAILS"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/tvfirst"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvfirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/fontcolor"
        android:textSize="15dp"
        android:text="PAGE LOADING ...."
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/viewdetails"
        android:layout_alignParentStart="true" />
</RelativeLayout>
