<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@color/backgroundnew"

tools:context="sehgal.attendancemodule.FirstPage">

<TextView
    android:id="@+id/tvEventDecideName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="22dp"
    android:text="Attendance/Diary"
    android:gravity="center"
    android:textColor="@color/fontcolor"
    android:textSize="22sp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />

<Spinner
    android:id="@+id/spinner"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_below="@+id/tvEventDecideName"
    android:background="@color/greentoolbar"
    android:popupBackground="@color/greentoolbar"
    android:textAlignment="center"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true" />
</RelativeLayout>

